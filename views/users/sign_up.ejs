<% include ../layout/header %>

<div class="container my-5 py-5 z-depth-1">

  <!--Section: Content-->
  <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">

    <!--Grid row-->
    <div class="row d-flex justify-content-center">

      <!--Grid column-->
      <div class="col-md-6">

        <!-- Default form subscription -->
        <form class="text-center" action="/users/sign_up" method="POST">

          <p class="h4 mb-4">新規会員登録</p>

          <!-- Name -->
          <input name="username" type="text" id="username" class="form-control mb-4" placeholder="ユーザー名">

          <!-- Email -->
          <input name="email" type="text" id="email" class="form-control mb-4" placeholder="メールアドレス">

          <!-- Password -->
          <input name="password" type="password" id="password" class="form-control mb-4" placeholder="パスワード">

          <!-- Sign in button -->
          <button class="btn btn-info btn-block" type="submit">登録</button>

          <div class="pt-3">
            <p>会員登録がお済の方はログインを済ませてください</p>
            <p>
              <a href="/users/sign_in">ログイン</a>
            </p>
          </div>


        </form>
        <!-- Default form subscription -->

      </div>
      <!--Grid column-->

    </div>
    <!--Grid row-->


  </section>
  <!--Section: Content-->

</div>

<% include ../layout/footer %>