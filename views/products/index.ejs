<% include ../layout/header %>

<div class="container my-5">

  <!--Section: Content-->
  <section class="dark-grey-text text-center">

    <!-- Section heading -->
    <h3 class="font-weight-bold mb-4 pb-2">ベストセラー</h3>
    <!-- Section description -->
    <p class="grey-text w-responsive mx-auto mb-5">「ベストセラー」では、人気商品を中心に家具、キッチン用品、家電、ファッション、食品、飲料、日用品などを特別価格でご提供します。
    </p>

    <!-- Grid row -->
    <div class="row">

      <% products.map((product) => { %>
      <!-- Grid column -->
      <div class="col-lg-3 col-md-6 mb-4">
        <!-- Card -->
        <div class="card card-cascade narrower card-ecommerce">
          <!-- Card image -->
          <div class="view view-cascade overlay">
            <img src="<%= product.image %>" class="card-img-top" alt="sample photo">
            <a href="/products/<%= product.id %>">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <!-- Card image -->
          <!-- Card content -->
          <div class="card-body card-body-cascade text-center pb-3">
            <!-- Title -->
            <h5 class="card-title mb-1">
              <strong>
                <a href="/products/<%= product.id %>"><%= product.name %></a>
              </strong>
            </h5>
            <!-- Description -->
            <p class="card-text"><%= product.name %></p>
            <!-- Card footer -->
            <div class="card-footer px-1">
              <span class="float-left font-weight-bold">
                <strong>¥<%= product.price %></strong>
              </span>
              <span class="float-right">
                <a class="material-tooltip-main" data-toggle="tooltip" data-placement="top" title="Add to Cart">
                  <i class="fas fa-shopping-cart grey-text ml-3"></i>
                </a>
              </span>
            </div>
          </div>
          <!-- Card content -->
        </div>
        <!-- Card -->
      </div>
      <!-- Grid column -->
      <% }) %>
    </div>
    <!-- Grid row -->

  </section>
  <!--Section: Content-->
</div>

<% include ../layout/footer %>